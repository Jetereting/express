<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context="us.eiyou.express.RegisterActivity">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="@null"
        android:hint="手机号"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_widthPercent="50%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="28.7%"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@null"
        android:hint="密码"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_widthPercent="50%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="38.5%"/>
    <EditText
        android:id="@+id/et_password_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@null"
        android:hint="确认密码"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_widthPercent="50%"
        app:layout_marginLeftPercent="27%"
        app:layout_marginTopPercent="47.7%"/>
    <Button
        android:id="@+id/b_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:background="@null"
        android:text="注册"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_widthPercent="43%"
        app:layout_heightPercent="7%"
        app:layout_marginLeftPercent="29%"
        app:layout_marginTopPercent="56.2%"/>



</com.zhy.android.percent.support.PercentRelativeLayout>
